{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../components/**/*.ts",
    "../components/**/*.tsx"
  ],
  "exclude": [
    "../node_modules"
  ]
}

