{
  "codeConnect": {
    "parser": "react",
    "include": [
      "components/**/*.figma.tsx",
      "components/**/*.tsx",
      "components/**/*.ts"
    ],
    "exclude": [
      "node_modules/**",
      "dist/**",
      "build/**",
      "**/*.stories.tsx"
    ],
    "label": "React",
    "documentUrlSubstitutions": {
      "^.*/contextdriven-ds/(.*)": "https://github.com/marcelusfernandes/contextdriven-ds/blob/main/$1"
    },
    "links": [
      {
        "name": "GitHub Repository",
        "url": "https://github.com/marcelusfernandes/contextdriven-ds"
      },
      {
        "name": "Storybook Web",
        "url": "http://localhost:6138"
      },
      {
        "name": "Component Code",
        "url": "https://github.com/marcelusfernandes/contextdriven-ds/tree/main/components"
      }
    ]
  }
}
